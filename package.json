{
  "name": "calculadora-pegada-carbono",
  "version": "1.0.0",
  "description": "Calculadora de Pegada de Carbono com integração de APIs e arquitetura de microserviços",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -t carbon-calculator .",
    "docker:run": "docker run -p 3000:3000 carbon-calculator",
    "k8s:apply": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/"
  },
  "keywords": [
    "carbon",
    "footprint",
    "sustainability",
    "microservices"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}

